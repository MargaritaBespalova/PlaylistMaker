<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/padding_16dp</item>
        <item name="android:background">@drawable/main_screen_button_ripple</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
        <item name="android:textColor">?attr/main_screen_button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_10dp</item>
        <item name="iconTint">?attr/main_screen_button_text_color</item>
    </style>

    <style name="YSMedium22">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/main_screen_text_color</item>
        <item name="android:textSize">@dimen/text_size_22sp</item>
    </style>

    <style name="YSRegular16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/secondary_screen_text_color</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

    <style name="YSRegular11">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/secondary_screen_icon_color</item>
        <item name="android:textSize">@dimen/text_size_11sp</item>
    </style>

</resources>